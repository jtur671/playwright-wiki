  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "playwright"
    ]
  },
  "include": [
    "tests/**/*.ts",
    "playwright.config.ts"
  ]
}
